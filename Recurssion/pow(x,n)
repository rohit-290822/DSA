class Solution {
    public double myPow(double x, int n) {
        long nn=n;
        if(nn<0)
        {
            nn*=-1;
        }
        
        double r=1.0;
        while(nn>0)
        {
            if(nn%2==0)
            {   x=x*x;
                nn=nn/2;
            }
            else
            {  r=x*r;
                nn-=1;
            }
        }
        
        
        if(n<0)
        {
            return (double)(1.0)/(double)(r);
        }
        return r;
    }
}
